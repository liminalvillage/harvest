{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the podcast"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+)?$",
      "description": "Schema version"
    },
    "holonId": {
      "type": "string",
      "description": "ID of the holon this podcast belongs to"
    },
    "title": {
      "type": "string",
      "description": "Title of the podcast episode"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the podcast content"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["host", "guest", "participant"]
          }
        },
        "required": ["id", "username"]
      },
      "description": "List of participants in the podcast"
    },
    "startTime": {
      "type": "integer",
      "description": "Unix timestamp when recording started"
    },
    "endTime": {
      "type": "integer",
      "description": "Unix timestamp when recording ended"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of the podcast recording (YYYY-MM-DD)"
    },
    "duration": {
      "type": "integer",
      "description": "Duration of the podcast in seconds"
    },
    "transcript": {
      "type": "object",
      "properties": {
        "segments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "number",
                "description": "Timestamp in seconds from start"
              },
              "speaker": {
                "type": "string",
                "description": "Username or ID of the speaker"
              },
              "text": {
                "type": "string",
                "description": "Transcribed text"
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Confidence score from whisper"
              }
            },
            "required": ["timestamp", "text"]
          }
        },
        "fullText": {
          "type": "string",
          "description": "Complete transcript as plain text"
        },
        "language": {
          "type": "string",
          "description": "Detected language code (e.g., 'en', 'es')"
        }
      },
      "required": ["segments"]
    },
    "audioUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to the audio recording (if stored separately)"
    },
    "videoUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to the video recording (if applicable)"
    },
    "status": {
      "type": "string",
      "enum": ["recording", "processing", "completed", "failed"],
      "description": "Current status of the podcast"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorizing the podcast"
    },
    "relatedQuests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "IDs of related quests or tasks"
    },
    "createdBy": {
      "type": "string",
      "description": "User ID of the creator"
    },
    "createdAt": {
      "type": "integer",
      "description": "Unix timestamp of creation"
    },
    "updatedAt": {
      "type": "integer",
      "description": "Unix timestamp of last update"
    }
  },
  "required": ["id", "version", "holonId", "participants", "startTime", "date", "status"]
}
